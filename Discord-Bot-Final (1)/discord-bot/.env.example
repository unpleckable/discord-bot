# Discord Bot Configuration
DISCORD_TOKEN=your_bot_token_here
CLIENT_ID=your_client_id_here
GUILD_ID=your_guild_id_here

# Server Whitelist (comma-separated server IDs, leave empty to allow all)
ALLOWED_SERVERS=

# Auto-Delete Messages Without Role
# Channels where only users with a specific role can message
PROTECTED_CHANNELS=
# Role required to message in protected channels
REQUIRED_ROLE_ID=

# Ticket System Configuration
TICKET_CATEGORY_ID=
SUPPORT_ROLE_ID=

# Welcome System (leave empty to disable)
# Get channel ID: Right-click channel â†’ Copy Channel ID
WELCOME_CHANNEL_ID=
# Use {user} for mention, {server} for server name, {memberCount} for member count
WELCOME_MESSAGE=Welcome {user} to {server}! We now have {memberCount} members!

# Minecraft Server Sync (for DiscordSRV)
# Role to give players who are online on Minecraft
MC_ONLINE_ROLE_ID=
# DiscordSRV console channel to monitor for join/leave messages
MC_CONSOLE_CHANNEL_ID=
